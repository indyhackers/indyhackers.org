
# Gems host
source 'http://rubygems.org'

# Rails (version >= 3.0.4 and < 3.1)
gem 'rails', '~> 3.0.4'

# Database
gem 'pg'

# HTML and CSS replacement (includes SASS)
gem 'haml', '~> 3.0'
gem 'haml-rails'

# Barista for CoffeeScript
gem 'barista', '~> 1.0'

# Form Builder
gem 'simple_form'

# DRY those controllers
gem 'inherited_resources', "1.1.2"

# Human readable URLs
gem 'friendly_id', '~> 3.2'

# Better console formatting
gem 'blackwinter-wirble', :require => nil
gem 'bond', :require => nil

# User authentication (accounts)
gem 'devise', '~> 1.1'

# Markdown
gem 'maruku'

# Pagination of long lists
gem 'will_paginate', '~> 3.0.pre2'

# DelayedJob for delayed jobs
gem 'delayed_job', '2.1.0.pre'

gem 'json_pure'

group :development, :test do
  gem 'thin'
  gem "rspec-rails", "~> 2.0.1"
  gem 'capybara'
  gem 'database_cleaner'
  gem 'cucumber-rails'
  gem 'cucumber'
  gem 'spork'
  gem 'launchy'
  gem 'factory_girl_rails'
  gem 'faker'
  gem 'fakeweb'
  gem 'gherkin'
  gem 'deadweight'

  gem 'rails3-generators', '0.11.0'
  gem 'hpricot'
  gem 'ruby_parser', '2.0.4'
  gem 'evergreen', :require => 'evergreen/rails'
  gem 'rcov'

  gem 'heroku'
end
